<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mycompany.health2.DoctorsVisits">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="CLIP -- Health -- Doctor&apos;s Visits "
            android:id="@+id/textView2"
            android:layout_row="0"
            android:layout_column="0" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"
            android:layout_row="1"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Appointments:"
            android:id="@+id/textView3"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create New Appointment"
            android:id="@+id/button"
            android:layout_row="4"
            android:layout_column="0" />

        <ExpandableListView
            android:layout_width="wrap_content"
            android:layout_height="51dp"
            android:id="@+id/expandableListView"
            android:layout_row="3"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Last Check Up Date:"
            android:id="@+id/textView4"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_rowSpan="2" />

        <EditText
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_row="7"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medications:"
            android:id="@+id/textView5"
            android:layout_row="8"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create New Medication"
            android:id="@+id/button2"
            android:layout_row="10"
            android:layout_column="0" />

        <ExpandableListView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/expandableListView2"
            android:layout_row="9"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Health Insurance Company:"
            android:id="@+id/textView6"
            android:layout_row="11"
            android:layout_column="0" />

        <EditText
            android:layout_width="229dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText2"
            android:layout_row="12"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Health Insurance Policy Number:"
            android:id="@+id/textView7"
            android:layout_row="13"
            android:layout_column="0" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText3"
            android:layout_row="14"
            android:layout_column="0" />
    </GridLayout>
</RelativeLayout>
